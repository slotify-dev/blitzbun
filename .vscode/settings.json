{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Changed from ESLint
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit"
  },
  "eslint.enable": true,
  "eslint.format.enable": false, // Disabled to avoid conflict with Prettier
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Changed
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode" // Changed
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.rulers": [80], // Helps visualize printWidth
  "diffEditor.ignoreTrimWhitespace": false
}
